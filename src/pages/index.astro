---
/**
 * HjemTrygg – portal-fokus startside
 * Enkelt, statisk, lett å videreutvikle.
 */
const brand = {
  name: "HjemTrygg",
  tagline: "Trygghet i hverdagen. Når det gjelder som mest.",
};
const pricing = [
  {
    name: "Basis",
    price: "99 kr/mnd",
    bullets: [
      "Boks 1: Beredskapsplan (grunnplan + «gjør dette nå»)",
      "Boks 3: Nødkontakter og møtepunkt (samlet oversikt)",
      "Enkelt oppsett på 5–10 minutter",
      "Min side som samler det viktigste"
    ],
    cta: "Start Basis",
  },
  {
    name: "Pluss",
    price: "149 kr/mnd",
    featured: true,
    bullets: [
      "Alt i Basis",
      "Boks 2: Husstand og roller (hvem gjør hva)",
      "Utvidet scenarioguide i beredskapsplanen",
      "Mer konkret veiledning når noe skjer"
    ],
    cta: "Start Pluss",
  },
  {
    name: "Familie",
    price: "199 kr/mnd",
    bullets: [
      "Alt i Pluss",
      "Boks 4: Oppgaver og påminnelser gjennom året",
      "Flere husstander (f.eks. bolig + hytte)",
      "Deling med familie (lesetilgang)"
    ],
    cta: "Start Familie",
  },
];
const faqs = [
  {
    q: "Er dette en butikk?",
    a: "Nei. HjemTrygg er først og fremst et abonnement og en digital portal. Produkter kan komme som et tillegg, men de er ikke hovedpoenget.",
  },
  {
    q: "Må jeg være «preppa» for å bruke dette?",
    a: "Nei. Poenget er å gjøre beredskap enkelt og konkret. Du får en plan som passer din hverdag, og du får små steg du faktisk gjennomfører.",
  },
  {
    q: "Hva betyr «Min side»?",
    a: "Min side blir stedet du lagrer husstandens plan, valg, nødkontakter, viktige nummer og oppgaver. Dette er kjernen i abonnementet.",
  },
  {
    q: "Kommer innlogging med en gang?",
    a: "Ja, det kan rulles ut trinnvis. Først bygger vi en sterk forside og en tydelig medlemsreise, deretter legger vi på innlogging og portal-funksjoner.",
  },
];
---

<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{brand.name} – {brand.tagline}</title>
    <meta name="description" content="Abonnement og portal for beredskap i hjemmet. Personlig plan, sjekklister og Min side for familien." />
    <style>
      :root{
        --bg: #0b1220;
        --card: rgba(255,255,255,.06);
        --card2: rgba(255,255,255,.09);
        --text: rgba(255,255,255,.92);
        --muted: rgba(255,255,255,.72);
        --line: rgba(255,255,255,.14);
        --accent: #7dd3fc;
        --accent2: #a78bfa;
        --radius: 16px;
      }
      *{ box-sizing: border-box; }
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
        background: radial-gradient(900px 500px at 20% 10%, rgba(167,139,250,.25), transparent 60%),
                    radial-gradient(900px 500px at 80% 0%, rgba(125,211,252,.22), transparent 55%),
                    var(--bg);
        color: var(--text);
      }
      a{ color: inherit; text-decoration: none; }
      .wrap{ max-width: 1100px; margin: 0 auto; padding: 28px 18px 64px; }
      .topbar{
        display:flex; align-items:center; justify-content:space-between;
        border: 1px solid var(--line); background: rgba(0,0,0,.18);
        padding: 12px 14px; border-radius: var(--radius);
        backdrop-filter: blur(10px);
      }
      .brand{ display:flex; gap:10px; align-items:center; }
      .dot{
        width: 10px; height: 10px; border-radius: 999px;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        box-shadow: 0 0 0 4px rgba(125,211,252,.12);
      }
      .nav{ display:flex; gap: 12px; align-items:center; }
      .pill{
        padding: 9px 12px; border:1px solid var(--line); border-radius: 999px;
        background: rgba(255,255,255,.04);
      }
      .pill.primary{
        border-color: rgba(125,211,252,.35);
        background: linear-gradient(135deg, rgba(125,211,252,.18), rgba(167,139,250,.12));
      }
      .hero{
        display:grid; grid-template-columns: 1.2fr .8fr; gap: 18px;
        margin-top: 18px;
      }
      @media (max-width: 900px){ .hero{ grid-template-columns: 1fr; } }
      .card{
        border: 1px solid var(--line);
        background: var(--card);
        border-radius: var(--radius);
        padding: 18px;
      }
      .h1{ font-size: 40px; line-height: 1.08; margin: 0 0 10px; letter-spacing: -0.02em; }
      @media (max-width: 520px){ .h1{ font-size: 32px; } }
      .lead{ margin:0 0 14px; color: var(--muted); font-size: 16px; line-height: 1.5; }
      .actions{ display:flex; gap:10px; flex-wrap: wrap; margin-top: 14px; }
      .btn{
        display:inline-flex; align-items:center; justify-content:center;
        padding: 11px 14px; border-radius: 12px;
        border: 1px solid var(--line);
        background: rgba(255,255,255,.04);
        font-weight: 600;
      }
      .btn.primary{
        border-color: rgba(125,211,252,.38);
        background: linear-gradient(135deg, rgba(125,211,252,.22), rgba(167,139,250,.16));
      }
      .kpis{ display:grid; grid-template-columns: repeat(3, 1fr); gap: 10px; margin-top: 14px; }
      @media (max-width: 700px){ .kpis{ grid-template-columns: 1fr; } }
      .kpi{ padding: 12px; border-radius: 14px; background: var(--card2); border:1px solid var(--line); }
      .kpi b{ display:block; font-size: 14px; margin-bottom: 4px; }
      .kpi span{ color: var(--muted); font-size: 13px; }
      .section{ margin-top: 18px; }
      .section h2{ margin: 0 0 10px; font-size: 20px; letter-spacing: -0.01em; }
      .grid3{ display:grid; grid-template-columns: repeat(3, 1fr); gap: 12px; }
      @media (max-width: 900px){ .grid3{ grid-template-columns: 1fr; } }
      ul{ margin: 10px 0 0; padding-left: 18px; color: var(--muted); }
      li{ margin: 6px 0; }
      .pricing{ display:grid; grid-template-columns: repeat(3, 1fr); gap: 12px; }
      @media (max-width: 900px){ .pricing{ grid-template-columns: 1fr; } }
      .plan{
        position: relative;
        border: 1px solid var(--line);
        background: var(--card);
        border-radius: var(--radius);
        padding: 16px;
      }
      .plan.featured{
        border-color: rgba(125,211,252,.35);
        background: linear-gradient(180deg, rgba(125,211,252,.12), rgba(255,255,255,.05));
      }
      .badge{
        position:absolute; top: 12px; right: 12px;
        padding: 6px 10px; border-radius: 999px;
        border:1px solid rgba(125,211,252,.35);
        background: rgba(125,211,252,.10);
        font-size: 12px; color: var(--text);
      }
      .plan h3{ margin: 0 0 6px; }
      .price{ font-size: 26px; margin: 0 0 10px; letter-spacing: -0.02em; }
      .small{ color: var(--muted); font-size: 13px; }
      details{
        border:1px solid var(--line);
        border-radius: 14px;
        padding: 12px 14px;
        background: rgba(255,255,255,.04);
      }
      details + details{ margin-top: 10px; }
      summary{ cursor:pointer; font-weight: 600; }
      footer{ margin-top: 22px; color: var(--muted); font-size: 13px; }
      .muted{ color: var(--muted); }
      .split{
        display:flex; gap: 10px; flex-wrap: wrap; align-items:center;
        justify-content: space-between;
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="topbar">
        <div class="brand">
          <span class="dot" aria-hidden="true"></span>
          <div>
            <div style="font-weight:800; letter-spacing:-0.01em;">{brand.name}</div>
            <div class="muted" style="font-size:12px;">Digital beredskapsportal</div>
          </div>
        </div>

        <nav class="nav">
          <a class="pill" href="#hvordan">Hvordan det fungerer</a>
          <a class="pill" href="#priser">Priser</a>
          <a class="pill" href="#faq">FAQ</a>
          <a class="pill primary" href="/min-side">Min side</a>
        </nav>
      </header>

      <main>
        <section class="hero">
          <div class="card">
            <h1 class="h1">{brand.tagline}</h1>
            <p class="lead">
              {brand.name} er et abonnement som gir deg en enkel, oppdatert beredskapsplan og en portal der alt er samlet.
              Du slipper å google i panikk. Du vet hva du skal gjøre, og hvem som gjør hva.
            </p>

            <div class="actions">
              <a class="btn primary" href="#priser">Se abonnement</a>
              <a class="btn" href="/min-side">Se Min side</a>
              <a class="btn" href="#tillegg">Produkter som tillegg</a>
            </div>

            <div class="kpis" aria-label="Nøkkelpunkter">
              <div class="kpi">
                <b>Plan som passer deg</b>
                <span>Basert på bolig, familie og risiko.</span>
              </div>
              <div class="kpi">
                <b>Oppdatert over tid</b>
                <span>Små oppdateringer, ikke skippertak.</span>
              </div>
              <div class="kpi">
                <b>Alt på ett sted</b>
                <span>Min side med lagring og oversikt.</span>
              </div>
            </div>
          </div>

          <aside class="card" id="minside">
            <h2 style="margin:0 0 8px;">Min side</h2>
            <p class="lead" style="margin-bottom:10px;">
              Portalen blir kjernen: her lagrer du plan, nødkontakter, rutiner og oppgaver.
              Målet er at du skal være ferdig på 10 minutter, og forbedre litt hver måned.
            </p>

            <ul>
              <li>Husstandens beredskapsplan med “gjør dette nå”</li>
              <li>Nødkontakter, møtepunkt og sjekklister</li>
              <li>Rollefordeling: hvem har ansvar for hva</li>
              <li>Varsler og små oppgaver gjennom året</li>
            </ul>

            <div class="actions" style="margin-top:12px;">
              <a class="btn primary" href="#priser">Start medlemskap</a>
              <a class="btn" href="#hvordan">Se hvordan det fungerer</a>
            </div>

            <p class="small" style="margin-top:10px;">
              Tips: senere kan denne knappen peke til innlogging, f.eks. <span class="muted">/login</span>.
            </p>
          </aside>
        </section>

        <section class="section card" id="hvordan">
          <h2>Hvordan det fungerer</h2>
          <div class="grid3">
            <div class="card" style="background:rgba(255,255,255,.04);">
              <h3 style="margin:0 0 6px;">1. Sett opp profilen</h3>
              <div class="muted">Bolig, husstand, hytte, behov. Du får riktig nivå.</div>
            </div>
            <div class="card" style="background:rgba(255,255,255,.04);">
              <h3 style="margin:0 0 6px;">2. Få en konkret plan</h3>
              <div class="muted">Sjekklister, roller og “første 60 minutter” ved hendelser.</div>
            </div>
            <div class="card" style="background:rgba(255,255,255,.04);">
              <h3 style="margin:0 0 6px;">3. Hold den oppdatert</h3>
              <div class="muted">Små oppgaver og oppdateringer, så du slipper skippertak.</div>
            </div>
          </div>
        </section>

        <section class="section" id="priser">
          <div class="split">
            <h2 style="margin:0;">Priser</h2>
            <div class="muted">Ingen binding. Avslutt når du vil.</div>
          </div>

          <div class="pricing" style="margin-top:12px;">
            {pricing.map((p) => (
              <div class={`plan ${p.featured ? "featured" : ""}`}>
                {p.featured ? <div class="badge">Mest valgt</div> : null}
                <h3>{p.name}</h3>
                <div class="price">{p.price}</div>
                <ul>
                  {p.bullets.map((b) => <li>{b}</li>)}
                </ul>
                <div class="actions" style="margin-top:12px;">
                  <a class={`btn ${p.featured ? "primary" : ""}`} href="#">{p.cta}</a>
                  <a class="btn" href="#faq">Spørsmål</a>
                </div>
              </div>
            ))}
          </div>

          <p class="small" style="margin-top:10px;">
            Knappene over er placeholders. Neste steg er å koble til betaling/abonnement og Min side.
          </p>
        </section>

        <section class="section card" id="tillegg">
          <h2>Produkter som tillegg</h2>
          <p class="lead">
            Du kan senere tilby utvalgte produkter som gjør planen enklere å følge. Produkter skal være et tillegg, ikke hovedfokus.
          </p>
          <ul>
            <li>Pakker som matcher planen (strøm, lys, vann, varme)</li>
            <li>“Anbefalt for deg” basert på profilen</li>
            <li>Ingen produktjungel, kun det som gir mening</li>
          </ul>
          <div class="actions" style="margin-top:12px;">
            <a class="btn" href="#">Se tillegg (kommer)</a>
          </div>
        </section>

        <section class="section card" id="faq">
          <h2>FAQ</h2>
          {faqs.map((f) => (
            <details>
              <summary>{f.q}</summary>
              <div class="muted" style="margin-top:8px; line-height:1.55;">{f.a}</div>
            </details>
          ))}
        </section>

        <section class="section card">
          <div class="split">
            <div>
              <h2 style="margin:0 0 6px;">Klar for å komme i gang?</h2>
              <div class="muted">Start med medlemskap. Deretter bygger vi Min side steg for steg.</div>
            </div>
            <div class="actions" style="margin:0;">
              <a class="btn primary" href="#priser">Velg abonnement</a>
              <a class="btn" href="#minside">Se Min side</a>
            </div>
          </div>
        </section>

        <footer>
          <div class="split">
            <div>© {new Date().getFullYear()} {brand.name}</div>
            <div class="muted">Personvern og vilkår kommer når abonnementet lanseres.</div>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
