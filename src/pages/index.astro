---
/**
 * HjemTrygg – portal-fokus startside
 * Ryddig flyt: Forside → Abonnement → Kom i gang
 */
const brand = {
  name: "HjemTrygg",
  tagline: "Trygghet i hverdagen. Når det gjelder som mest.",
};

const pricing = [
  {
    name: "Basis",
    price: "99 kr/mnd",
    bullets: [
      "Beredskapsplan med «gjør dette nå»",
      "Nødkontakter og avtalt møtepunkt",
      "Enkelt oppsett på 5–10 minutter",
      "Min side som samler det viktigste",
    ],
    cta: "Velg Basis",
  },
  {
    name: "Pluss",
    price: "149 kr/mnd",
    featured: true,
    bullets: [
      "Alt i Basis",
      "Rollefordeling: hvem gjør hva",
      "Utvidet scenarioguide",
      "Mer konkret veiledning når noe skjer",
    ],
    cta: "Velg Pluss",
  },
  {
    name: "Familie",
    price: "199 kr/mnd",
    bullets: [
      "Alt i Pluss",
      "Oppgaver og påminnelser gjennom året",
      "Flere husstander (bolig + hytte)",
      "Deling med familie (lesetilgang)",
    ],
    cta: "Velg Familie",
  },
];

const faqs = [
  {
    q: "Er dette en butikk?",
    a: "Nei. HjemTrygg er først og fremst et abonnement og en digital portal. Produkter kan komme som et tillegg, men er ikke hovedpoenget.",
  },
  {
    q: "Må jeg være «preppa» for å bruke dette?",
    a: "Nei. Poenget er å gjøre beredskap enkelt og konkret, uten mas eller krav om jevnlig bruk.",
  },
  {
    q: "Hva betyr «Min side»?",
    a: "Min side er kjernen i HjemTrygg. Her samles plan, nødkontakter, roller og oppgaver på ett sted.",
  },
  {
    q: "Får jeg mange varsler?",
    a: "Nei. HjemTrygg er stille som standard. Du bestemmer selv om og når du vil ha påminnelser.",
  },
];
---

<html lang="no">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{brand.name} – {brand.tagline}</title>
  <meta name="description" content="Stille abonnement for beredskap i hjemmet. Én plan, én portal, full kontroll." />
</head>

<body>
<div class="wrap">

  <header class="topbar">
    <div class="brand">
      <div style="font-weight:800;">{brand.name}</div>
      <div class="muted" style="font-size:12px;">Digital beredskapsportal</div>
    </div>
    <nav class="nav">
      <a class="pill" href="#hvordan">Hvordan det fungerer</a>
      <a class="pill" href="#faq">FAQ</a>
      <a class="pill primary" href="/abonnement">Abonnement</a>
    </nav>
  </header>

  <main>

    <!-- HERO -->
    <section class="hero">
      <div class="card">
        <h1 class="h1">{brand.tagline}</h1>
        <p class="lead">
          HjemTrygg gir deg en enkel beredskapsplan og en portal der alt er samlet.
          Ingen mas. Ingen støy. Bare trygghet når det faktisk gjelder.
        </p>

        <div class="actions">
          <a class="btn primary" href="/abonnement">Se abonnement</a>
          <a class="btn" href="/min-side">Se Min side</a>
        </div>
      </div>

      <aside class="card">
        <h2>Min side</h2>
        <p class="lead">
          Kjernen i HjemTrygg. Her samler du plan, nødkontakter, roller og oppgaver
          – klart når du trenger det.
        </p>
        <ul>
          <li>Konkrete «gjør dette nå»-steg</li>
          <li>Nødkontakter og møtepunkt</li>
          <li>Rollefordeling i stress</li>
        </ul>
        <div class="actions" style="margin-top:12px;">
          <a class="btn primary" href="/abonnement">Start medlemskap</a>
        </div>
      </aside>
    </section>

    <!-- HVORDAN -->
    <section class="section card" id="hvordan">
      <h2>Hvordan det fungerer</h2>
      <ol class="muted">
        <li>Velg abonnement og sett opp det viktigste</li>
        <li>Få en ferdig beredskapsplan tilpasset deg</li>
        <li>La HjemTrygg være stille i bakgrunnen</li>
      </ol>
    </section>

    <!-- PRISER -->
    <section class="section" id="priser">
      <h2>Abonnement</h2>
      <p class="muted">
        Basis gir deg kjernen. Pluss gjør planen praktisk i stress.
        Familie holder alt oppdatert over tid og på tvers av hjem.
      </p>

      <div class="pricing">
        {pricing.map((p) => (
          <div class={`plan ${p.featured ? "featured" : ""}`}>
            <h3>{p.name}</h3>
            <div class="price">{p.price}</div>
            <ul>
              {p.bullets.map((b) => <li>{b}</li>)}
            </ul>
            <div class="actions">
              <a class={`btn ${p.featured ? "primary" : ""}`} href="/abonnement">
                {p.cta}
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- FAQ -->
    <section class="section card" id="faq">
      <h2>Spørsmål og svar</h2>
      {faqs.map((f) => (
        <details>
          <summary>{f.q}</summary>
          <p class="muted">{f.a}</p>
        </details>
      ))}
    </section>

    <!-- BUNN CTA -->
    <section class="section card">
      <h2>Klar når du er klar</h2>
      <p class="muted">
        Start medlemskap når det passer. HjemTrygg er laget for å være der
        – uten å kreve oppmerksomhet.
      </p>
      <div class="actions">
        <a class="btn primary" href="/abonnement">Se abonnement</a>
      </div>
    </section>

    <footer class="muted">
      © {new Date().getFullYear()} {brand.name}
    </footer>

  </main>
</div>
</body>
</html>
